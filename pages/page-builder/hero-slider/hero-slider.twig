{% if item.acf_fc_layout == 'hero_slider' %}
<div
  class="uk-position-relative uk-visible-toggle uk-light"
  tabindex="-1"
  uk-slider="center: true"
>
  <ul class="uk-slider-items uk-grid">
    {% for item in item.hero_slider %} 
            <li class="uk-width-1 slide slide">
                <div class="uk-panel uk-animation-slide-top">
                    <img src="{{ item.background_image }}" alt="" />
                    <div class="uk-position-center uk-panel">
                    <h1 class="uk-animation-slide-left" >{{ item.heading }}</h1>
                    <p class="uk-animation-fade">{{ item.paragraph }}</p>
                    </div>
                </div>
            </li>
    {% endfor %}
  </ul>

  <a
    class="uk-position-center-left uk-position-small"
    href="#"
    uk-slidenav-previous
    uk-slider-item="previous"
  ></a>
  <a
    class="uk-position-center-right uk-position-small"
    href="#"
    uk-slidenav-next
    uk-slider-item="next"
  ></a>
</div>

<!-- Include Style for Module-->
<style>
  {# {{ source('/pages/page-builder/hero/hero.css') }} #}
</style>

{% endif %}
