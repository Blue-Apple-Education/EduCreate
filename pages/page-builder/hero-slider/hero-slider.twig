{% if item.acf_fc_layout == 'hero_slider' %}
<div
  class="uk-position-relative uk-visible-toggle uk-light"
  tabindex="-1"
  uk-slider="center: true"
>
  <ul class="uk-slider-items uk-grid">
    {% for item in item.hero_slider %} 
            <li class="uk-width-1 slide slide">
                <div class="uk-panel">
                    <img src="https://educreatetheme.local/wp-content/uploads/2021/01/ASC_4271-homepage-hero-slider-01.png" alt="" />
                    <div class="uk-position-center uk-panel">
                    <h1>{{ item.heading }} Title</h1>
                    <p>{{ item.paragraph }} paragraph</p>
                    </div>
                </div>
            </li>
    {% endfor %}
  </ul>

  <a
    class="uk-position-center-left uk-position-small uk-hidden-hover"
    href="#"
    uk-slidenav-previous
    uk-slider-item="previous"
  ></a>
  <a
    class="uk-position-center-right uk-position-small uk-hidden-hover"
    href="#"
    uk-slidenav-next
    uk-slider-item="next"
  ></a>
</div>

<!-- Include Style for Module-->
<style>
  {# {{ source('/pages/page-builder/hero/hero.css') }} #}
</style>

{% endif %}
